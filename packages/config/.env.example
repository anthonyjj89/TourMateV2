# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tourmate
MONGODB_DB_NAME=tourmate

# Authentication
JWT_SECRET=your-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your-cookie-secret-key-min-32-characters

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@example.com

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# AWS Configuration (Required if STORAGE_TYPE=s3)
AWS_REGION=your-aws-region
AWS_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Note: This is an example file. Create a .env file with your actual values.
# Never commit your actual .env file to version control.
